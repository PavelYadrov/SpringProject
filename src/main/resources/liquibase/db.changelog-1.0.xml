        <insert catalogName="spring"
                schemaName="public"
                tableName="user_roles">
            <column name="user_id" value="1"/>
            <column name="role_id" value="1"/>
        </insert>
        <insert catalogName="spring"
                schemaName="public"
                tableName="user_roles">
            <column name="user_id" value="1"/>
            <column name="role_id" value="2"/>
        </insert>
    </changeSet>
</databaseChangeLog>