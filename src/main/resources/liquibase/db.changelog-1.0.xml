<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


 <changeSet id="1.0.0" author="pavel.yadrov">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="username" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(25)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="1.0.1" author="pavel.yadrov">
        <createTable tableName="roles">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="1.0.2" author="pavel.yadrov">
        <createTable tableName="user_roles">
            <column name="user_id" type="BIGINT">
            </column>

            <column name="role_id" type="BIGINT">
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.3" author="pavel.yadrov">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="user_roles"
                                 constraintName="fk_user_roles_user"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

    <changeSet id="1.0.4" author="pavel.yadrov">
        <addForeignKeyConstraint baseColumnNames="role_id"
                                 baseTableName="user_roles"
                                 constraintName="fk_user_roles_roles"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="roles"/>
    </changeSet>

    <changeSet id="1.0.5" author="pavel.yadrov">
        <insert tableName="roles">
            <column name="name" value="ROLE_USER"/>
        </insert>

        <insert tableName="roles">
            <column name="name" value="ROLE_ADMIN"/>
        </insert>
    </changeSet>

    <changeSet id="1.0.6" author="pavel.yadrov">
        <createTable tableName="categories">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="parent_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="1.0.7" author="pavel.yadrov">
        <createTable tableName="advertisements">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="category_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="date" type="TIMESTAMP" >
                <constraints nullable="false"/>
            </column>

            <column name="description" type="VARCHAR(10000)">
                <constraints nullable="false" />
            </column>

            <column name="price" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.8" author="pavel.yadrov">
        <createTable tableName="photos">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="url" type="VARCHAR(1000)">
                <constraints nullable="false"/>
            </column>

            <column name="advertisement_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1.0.9" author="pavel.yadrov">
        <addForeignKeyConstraint baseColumnNames="advertisement_id"
                                 baseTableName="photos"
                                 constraintName="fk_photo_advertisement"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="advertisements"/>
    </changeSet>

    <changeSet id="1.0.10" author="pavel.yadrov">
        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="advertisements"
                                 constraintName="fk_advertisement_category"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="categories"/>
    </changeSet>

    <changeSet id="1.0.11" author="pavel.yadrov">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="advertisements"
                                 constraintName="fk_advertisement_user"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

    <changeSet id="1.0.12" author="pavel.yadrov">
        <addColumn catalogName="spring"
                   schemaName="public"
                   tableName="users">
            <column name="avatar"
                    position="2"
                    type="varchar(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="1.0.13" author="pavel.yadrov">
        <addColumn catalogName="spring"
                   schemaName="public"
                   tableName="users">
            <column name="registration_date"
                    type="TIMESTAMP"/>
        </addColumn>
    </changeSet>

    <changeSet id="1.1.0" author="pavel.yadrov">
        <createTable tableName="messages">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="text" type="VARCHAR(1000)">
                <constraints nullable="false"/>
            </column>

            <column name="message_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="room_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.1.1" author="pavel.yadrov">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="messages"
                                 constraintName="fk_message_user"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

    <changeSet id="1.1.2" author="pavel.yadrov">
        <createTable tableName="rooms">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="last_update" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.1.3" author="pavel.yadrov">
        <addForeignKeyConstraint baseColumnNames="room_id"
                                 baseTableName="messages"
                                 constraintName="fk_message_room"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="rooms"/>
    </changeSet>

    <changeSet id="1.1.6" author="pavel.yadrov">
        <createTable tableName="user_rooms">
            <column name="user_id" type="BIGINT">
            </column>

            <column name="room_id" type="BIGINT">
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.1.7" author="pavel.yadrov">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="user_rooms"
                                 constraintName="fk_user_rooms_user"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

    <changeSet id="1.1.8" author="pavel.yadrov">
        <addForeignKeyConstraint baseColumnNames="room_id"
                                 baseTableName="user_rooms"
                                 constraintName="fk_user_rooms_rooms"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="rooms"/>
    </changeSet>

    <changeSet id="1.1.9" author="pavel.yadrov">
        <addColumn catalogName="spring"
                   schemaName="public"
                   tableName="messages">
            <column name="read"
                    type="BOOLEAN"/>
        </addColumn>
    </changeSet>

    <changeSet id="1.1.10" author="pavel.yadrov">
        <insert catalogName="spring"
                schemaName="public"
                tableName="categories">
            <column name="name" value="All"/>
            <column name="description" value="think about it"/>
            <column name="parent_id" value="0"/>
        </insert>

        <insert catalogName="spring"
                schemaName="public"
                tableName="users">
            <column name="id" value="1"/>
